<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetDashBoardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/agree_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="앱 사용을 위해 권한을 허용해주세요. \n꼭 필요한 권한만 받아요."
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"/>

    <ImageView
        android:id="@+id/agree_subtitle_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/notice"
        app:layout_constraintTop_toBottomOf="@+id/agree_title"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="@+id/agree_title"
        />

    <TextView
        android:id="@+id/agree_subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="알림"
        app:layout_constraintTop_toBottomOf="@+id/agree_title"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toEndOf="@+id/agree_subtitle_img"/>

    <TextView
        android:id="@+id/agree_content1"
        android:layout_width="281dp"
        android:layout_height="62dp"
        android:fontFamily="@font/noto_sans"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#a2a2a2"
        android:lineSpacingExtra="6sp"
        app:layout_constraintTop_toBottomOf="@+id/agree_subtitle1"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/agree_subtitle1"
        android:text="과제 D-DAY, 경고, 사운드 등이 알림에 포함될 수 있습니다. 설정에서 이를 구성할 수 있습니다."/>


    <ImageButton
        android:id="@+id/continue_btn"
        android:layout_width="313dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/btn_continue"
        app:layout_constraintTop_toBottomOf="@id/agree_content1"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>