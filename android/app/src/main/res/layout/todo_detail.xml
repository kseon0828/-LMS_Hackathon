<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetDashBoardLayout"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <!--    <data>-->
    <!--        <variable-->
    <!--            name="memo"-->
    <!--            type="com.example.lms.Memo" />-->

    <!--    </data>-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <TextView
            android:id="@+id/todo_detail_View"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:text=""
            android:fontFamily="@font/noto_sans"
            android:textStyle="normal"
            android:textColor="#000000"
            android:lineSpacingExtra="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/todoDeleteButton"
            android:layout_width="97dp"
            android:layout_height="47dp"
            android:background="#f2f2f2"
            android:text="삭제"
            android:fontFamily="@font/noto_sans"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#808080"
            android:lineSpacingExtra="7sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="65dp"
            app:layout_constraintTop_toBottomOf="@id/todo_detail_View"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/todoCloseButton"
            android:layout_width="211dp"
            android:layout_height="47dp"
            android:background="#4b89dc"
            android:text="닫기"
            android:fontFamily="@font/noto_sans"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="7sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="65dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/todo_detail_View"
            app:layout_constraintStart_toEndOf="@id/todoDeleteButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>