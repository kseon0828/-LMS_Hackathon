<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeworkTodoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/memoTodoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeworkTodoRecyclerView" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/list_homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/homework_white_36"
        app:fabCustomSize="45dp"
        app:backgroundTint="@color/main"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/list_add"
        app:layout_constraintBottom_toBottomOf="@id/list_add"
        app:layout_constraintStart_toStartOf="@id/list_add"
        app:layout_constraintEnd_toEndOf="@id/list_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/list_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/check_box_white_36"
        app:fabCustomSize="45dp"
        app:backgroundTint="@color/main"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/list_add"
        app:layout_constraintBottom_toBottomOf="@id/list_add"
        app:layout_constraintStart_toStartOf="@id/list_add"
        app:layout_constraintEnd_toEndOf="@id/list_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/list_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_add_white_36"
        app:fabCustomSize="55dp"
        app:backgroundTint="@color/main"
        app:rippleColor="@color/white"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>