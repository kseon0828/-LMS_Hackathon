<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetDashBoardLayout"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="411dp">
        <TextView
            android:id="@+id/alarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"
            android:lineSpacingExtra="6sp"
            android:text="몇시쯤 과제 기한을 알려드릴까요?"
            android:layout_marginTop="43dp"
            android:layout_marginStart="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/alarmNotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#a2a2a2"
            android:lineSpacingExtra="6sp"
            android:text="과제를 놓치지 않도록 푸시알람을 보내드릴께요."
            android:layout_marginTop="85dp"
            android:layout_marginStart="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TimePicker
            android:id="@+id/alarmTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginTop="103dp"
            android:layout_marginStart="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alarm_cancleButton"
            android:layout_width="97dp"
            android:layout_height="47dp"
            android:background="#f2f2f2"
            android:text="취소"
            android:fontFamily="@font/noto_sans"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#808080"
            android:lineSpacingExtra="7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="65dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alarmButton"
            android:layout_width="211dp"
            android:layout_height="47dp"
            android:background="#4b89dc"
            android:text="이 시간에 알림받기"
            android:fontFamily="@font/noto_sans"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="7sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="23dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>