<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetDashBoardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/terms_background"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:background="@drawable/main_terms_background"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>

    <CheckBox
        android:id="@+id/check_circle_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/check_circle"
        android:button="@null"
        android:checked="false"
        android:enabled="true"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="49dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toStartOf="@+id/terms_background" />

    <TextView
        android:id="@+id/terms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_bold"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="약관에 모두 동의"
        app:layout_constraintStart_toEndOf="@+id/check_circle_btn"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <CheckBox
        android:id="@+id/terms_subtitle1_img"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/check_circle"
        android:button="@null"
        android:checked="false"
        android:enabled="true"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/terms_background"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/terms_subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="모두리 LMS 정보 수집 동의"
        app:layout_constraintTop_toBottomOf="@+id/terms_background"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toEndOf="@+id/terms_subtitle1_img"/>

    <ImageButton
        android:id="@+id/terms_subtitle1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_check_right"
        app:layout_constraintTop_toBottomOf="@+id/terms_background"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/terms_subtitle1" />

    <CheckBox
        android:id="@+id/terms_subtitle2_img"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/check_circle"
        android:button="@null"
        android:checked="false"
        android:enabled="true"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/terms_subtitle1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/terms_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="모두리 맞춤형 서비스 안내 동의(선택)"
        app:layout_constraintTop_toBottomOf="@+id/terms_subtitle1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toEndOf="@+id/terms_subtitle2_img"/>

    <ImageButton
        android:id="@+id/terms_subtitle2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_check_right"
        app:layout_constraintTop_toBottomOf="@+id/terms_subtitle1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/terms_subtitle2" />

    <CheckBox
        android:id="@+id/terms_subtitle3_img"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/check_circle"
        android:button="@null"
        android:checked="false"
        android:enabled="true"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/terms_subtitle2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/terms_subtitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="6sp"
        android:text="마케팅 정보 수신 동의(선택)"
        app:layout_constraintTop_toBottomOf="@+id/terms_subtitle2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintStart_toEndOf="@+id/terms_subtitle3_img"/>

    <ImageButton
        android:id="@+id/terms_subtitle3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_check_right"
        app:layout_constraintTop_toBottomOf="@+id/terms_subtitle2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/terms_subtitle3" />

    <ImageButton
        android:id="@+id/continue_btn"
        android:layout_width="313dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/btn_continue"
        app:layout_constraintTop_toBottomOf="@id/terms_subtitle3"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>